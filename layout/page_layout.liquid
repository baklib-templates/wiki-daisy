<!doctype html>
<html lang="{{ site.language }}" class="scroll-smooth">
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="author" content="Baklib">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="turbo-prefetch" content="false">
    {% meta_tags %}

    {{ 'baklib/shared/main.css' | asset_url | stylesheet_tag: data-turbo-track: 'reload' }}
    {{ 'baklib/shared/main.js' | asset_url | script_tag: data-turbo-track: 'reload' }}

    {{ 'stylesheets/application.css' | asset_url | stylesheet_tag: data-turbo-track: 'reload' }}
    {{ 'javascripts/application.js' | asset_url | script_tag: defer: true, data-turbo-track: 'reload' }}

    {%# TIPS：在低代码平台开发时，请打开下一行代码注释 %}
    {% if false %}
      <link href="https://unpkg.com/daisyui@latest/dist/full.css" rel="stylesheet">
    {% endif %}
    {% if false %}
      {%# <script src="https://cdn.tailwindcss.com"></script> %}
      {{ 'javascripts/cdn.tailwindcss.js' | asset_url | script_tag: data-turbo-track: 'reload' }}
    {% endif %}

    <style>
      {%- assign screen_width = site.settings.screen_width.value | presence | default: '1200px' -%}
      {%- assign left_sidebar_width = site.settings.left_sidebar_width | presence | default: '300' | append: 'px' -%}
      {%- assign right_sidebar_width = site.settings.right_sidebar_width | presence | default: '240' | append: 'px' -%}
      {%- assign header_height = site.settings.header_height | presence | default: '64' | append: 'px' -%}

      :root {
        --max-content-width: {{ screen_width }};
        --left-sidebar-width: {{ left_sidebar_width }};
        --right-sidebar-width: {{ right_sidebar_width  }};
        --header-height: {{ header_height }};
      }
    </style>

    {{ site.settings.head_html }}
  </head>
  <body id="js--body" class="grid grid-rows-[auto_1fr_auto] min-h-screen tracking-wide" x-data="{ isHomePage: false, showScrollBar: false }" x-init="isHomePage = location.pathname === '{{ site.index_path }}';  window.addEventListener('scroll', () => {
          showScrollBar = window.scrollY > window.innerHeight;
        });">
    <div class='grid md:grid-cols-[var(--left-sidebar-width)_1fr] grid-cols-1'>
      {% render 'page/sidebar', settings: site.settings, page: page %}
      <div class='flex flex-col'>
        {% render 'page/header' %}
        {{ content_for_layout }}
        {% render 'footer' %}
      </div>
    </div>
    {% render 'scroll_bar' %}
  </body>
</html>
