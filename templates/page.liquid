<div class="max-w-7xl mx-auto min-h-screen bg-white rounded-lg  p-5 md:p-10 md:mb-24 xl:gap-20">

  <!-- ========== MAIN CONTENT ========== -->
  <turbo-frame id="main-content">
    <article class="">
      <h1 class="text-center mb-2 text-2xl font-bold sm:text-3xl xl:text-4xl">
        {{ page.settings.title }}
      </h1>
      <div class="mt-8 flow-root">
        <div class="overflow-auto">
          <div data-controller="view_images2"
            class="ProseMirror prose sm:prose-base lg:prose-md focus:outline-none dark:prose-invert prose-a:text-blue-600">

            {{ page.settings.content }}
            
          </div>
        </div>
      </div>
    </article>
  </turbo-frame>

</div>
<!-- ========== END MAIN CONTENT ========== -->

<!-- ========== Footer Section ========== -->
<div class="btm-nav flex justify-between bg-slate-600 text-white border-t border-teal-100">

    {% comment %} 上一页 {% endcomment %}
    <a {% if page.prev_page %}href="{{ page.prev_page.path }}"{% else %}disabled{% endif %} class="">
      <span class="sr-only">Previous</span>
      <svg class="w-8 h-8" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
      </svg>
      <span class="btm-nav-label text-xs">上一页</span>
    </a>

  <div class="dropdown dropdown-top">
    <div tabindex="0" role="button" class="text-center">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mx-auto w-8 h-8 size-8">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
      <span class="btm-nav-label text-xs">导航</span>
    </div>

    <ul tabindex="0" class="dropdown-content menu bg-slate-600 rounded-box z-[1] w-64 p-2 shadow">
      {% for nav_page in page.parent.children_in_list %}
        <li><a href="{{ nav_page.path }}" class="border-b border-dotted hover:bg-base-100 hover:text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
          </svg>
          <span>{{ nav_page.link_text }}</span>
          </a>
        </li>
      {% endfor %}
      <li>
        <a href="javascript: window.open('{{ site.url }}/s/ebook?page={{ page.parent.path }}', '_blank').print();" class="hover:bg-base-100 hover:text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3" />
          </svg>
          <span class="btm-nav-label text-sm">下载方案</span>
        </a>
      </li>
    </ul>
  </div>
  

    {% comment %} 下一页 {% endcomment %}
    <a {% if page.next_page %}href="{{ page.next_page.path }}"{% else %}disabled{% endif %} class="">
      <span class="sr-only">Next</span>
      <svg class="w-8 h-8" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
      </svg>
      <span class="btm-nav-label text-xs">下一页</span>
    </a>
</div>


{% schema %}
    {
    "name": "Page",
    "description": "The Page as a ebook plan section",
    "thumb_url": "images/theme/page.png",
    "preview_image_urls": [
      "images/theme/page.png"
    ],
    "sub_page_templates": ["page"],
    "settings": [
      {
        "id": "title",
        "type": "text",
        "readonly": true,
        "label": "标题",
        "info": "知识库同步，不可编辑"
      },
      {
        "id": "content",
        "type": "richtext",
        "label": "t:settings_schema.page.settings.content.label",
        "readonly": true,
        "info": "t:settings_schema.page.settings.content.info"
      }
    ]
    }
{% endschema %}