{
  "name": "blog",
  "version": "2.1.0",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all --parallel build:css build:js build:elements-css",
    "build:css": "npx @tailwindcss/cli -i ./src/stylesheets/application.css -o ./assets/stylesheets/application.css",
    "build:elements-css": "postcss ./src/stylesheets/elements/index.css -o ./assets/stylesheets/elements.css",
    "build:js": "npx esbuild ./src/javascripts/application.js --bundle --minify --outfile=./assets/javascripts/application.js",
    "dev": "npm-run-all --parallel 'build:css --watch' 'build:js --watch'",
    "livereload": "guard"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.4",
    "daisyui": "^5.0.27",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.4"
  },
  "dependencies": {
    "@alpinejs/collapse": "^3.15.0",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo": "^8.0.18",
    "alpinejs": "^3.15.0",
    "autoprefixer": "^10.4.21",
    "baklib-theme-i18n-cli": "^1.0.4",
    "js-yaml": "^4.1.0",
    "marked": "^16.4.0",
    "mustache": "^4.2.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-nested": "^7.0.2",
    "postcss-nested-import": "^1.3.0",
    "postcss-replace": "^2.0.1",
    "tippy.js": "^6.3.7",
    "viewerjs": "^1.11.7"
  }
}
